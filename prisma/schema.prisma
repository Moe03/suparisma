generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum SomeEnum {
  ONE
  TWO
  THREE
}


model Thing {
  id        String   @id @default(uuid())
  // @enableSearch
  name      String? 
  someEnum  SomeEnum @default(ONE)
  someNumber Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// @disableRealtime
model AuditLog {
  id        String   @id @default(uuid())
  action    String
  details   String?
  createdAt DateTime @default(now())
}
